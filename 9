#include <stdio.h>

int minSteps(int x, int y) {
   if (y == x) {
      return 0;
   }

   int count = 1;
   int difference = y - x;

   while (difference > count) {
      if (difference <= 2 * count) {
         difference = 0;
      }
      count++;
   }

   return count;
}

int main() {
   int x, y;
   printf("x: ");
   scanf("%d", &x);
   printf("y: ");
   scanf("%d", &y);

   printf("\nResult: %d", minSteps(x, y));
   return 0;
}
